<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.firnazluztian.myportofolio.MainActivity"
    android:onClick="onClickFrameLayout"
    android:background="#59acd9">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:indeterminate="false"
        android:max="@android:integer/config_shortAnimTime"
        android:progress="@android:integer/config_shortAnimTime"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="now loading...."
        android:id="@+id/textView3"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:textColor="#e7e7e7" />

</RelativeLayout>
